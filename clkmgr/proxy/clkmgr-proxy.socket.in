[Unit]
Description=Clock Manager service socket
ConditionPathExists=!@sysconfdir@/clkmgr/proxy_not_to_be_run

[Socket]
ListenMessageQueue=/clkmgr
Accept=no
ReceiveBuffer=8K
SendBuffer=8K

[Install]
WantedBy=multi-user.target
Alias=clkmgr-proxy.socket

